{% set types = [
    {title: 'title.promises'|trans, id: 'promises', path: 'promise/{{slug}}'},
    {title: 'title.politicians'|trans, id: 'politicians', path: 'po/{{slug}}'},
]
%}
{# {title: 'title.actions'|trans, id: 'actions', path: 'a/{{slug}}'}, #}

<div class="modal fade"
     id="instant-search-modal"
     tabindex="-1"
     role="dialog"
     aria-labelledby="instant-search-modal"
     aria-hidden="true"
     data-search-types="{{ types|json_encode }}">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                {% for type in types %}
                    <input class="form-control mr-sm-2{% if not loop.first %} d-none{% endif %}"
                           type="text"
                           placeholder="{{ 'placeholder.keywords'|trans }}"
                           id="search-{{ type.id }}-input"
                           data-search-type="{{ type.id }}"
                           aria-label="Search">
                {% endfor %}
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body pt-0">
                <div class="nav nav-tabs nav-fill mt-3{% if types|length == 1 %} d-none{% endif %}"
                     role="tablist">
                    {% for type in types %}
                        <a class="nav-item nav-link{% if loop.first %} active{% endif %}"
                           id="search-{{ type.id }}-tab"
                           href="#search-{{ type.id }}"
                           aria-controls="search-{{ type.id }}"
                           data-search-type="{{ type.id }}"
                           aria-selected="{% if loop.first %}true{% else %}false{% endif %}"
                           data-toggle="tab"
                           role="tab">{{ type.title }}</a>
                    {% endfor %}
                </div>
                <div class="tab-content">
                    {% for type in types %}
                        <div class="tab-pane mt-3 fade{% if loop.first %} show active{% endif %}"
                             role="tabpanel"
                             id="search-{{ type.id }}"
                             data-search-type="{{ type.id }}"
                             aria-labelledby="search-{{ type.id }}-tab"></div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
