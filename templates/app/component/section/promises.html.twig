<div class="container-fluid py-5{%
    if container_class is defined
%} {{ container_class }}{%
    else
%} bg-dark{% endif
%}">
    <div class="row">
        <div class="col">
            <h3 class="text-center text-light">{{ 'title.promises'|trans }}</h3>
        </div>
    </div>
    <div class="row justify-content-md-center">
        {% for promise in promises %}
            <div class="col-lg-6 col-xl-4 mt-3 mt-lg-4">
                {% include 'app/component/item/promise.html.twig' with {promise: promise} only %}
            </div>
        {% endfor %}
    </div>
</div>