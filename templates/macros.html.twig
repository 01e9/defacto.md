{% macro get_date_interval_progress(beginDate, endDate) %}
{%- spaceless %}
    {% set currentDate = date() %}
    {% if beginDate < currentDate and currentDate < endDate %}
        {% set percent = 100 - 100
            * (endDate.getTimestamp() - currentDate.getTimestamp())
            / (endDate.getTimestamp() - beginDate.getTimestamp())
        %}
    {% elseif endDate <= currentDate %}
        {% set percent = 100 %}
    {% else %}
        {% set percent = 0 %}
    {% endif %}
{% endspaceless -%}
    {{- percent -}}
{% endmacro %}

{% macro politician_photo_url(politician) %}
    {{-
    politician.photo
    ? asset('uploads/politicians/' ~ politician.photo.filename)
    : asset('img/no-avatar.png')
    -}}
{% endmacro %}

{% macro party_logo_url(party) %}
    {{-
    party.logo
    ? asset('uploads/parties/' ~ party.logo.filename)
    : asset('img/no-image.png')
    -}}
{% endmacro %}