{% import 'macros.html.twig' as macros %}

{% set maxCount = 0 %}
{% for promise in promise_statistics %}
    {% set maxCount = max(maxCount, promise.count) %}
{% endfor %}

<div class="mandate-statistics bg-light-pattern pb-5">
    {% include 'app/component/after-header-space.html.twig' %}
    <div class="container">
        <div class="row">
            <div class="col text-center pb-3">
                <h1 class="my-3">{{ mandate.institutionTitle.title.name }}</h1>
            </div>
        </div>
        <div class="row align-items-lg-center">
            <div class="photo-col col-lg-4 mb-4 mb-lg-0">
                <img src="{{ macros.politician_photo_url(mandate.politician) }}"
                     class="rounded-circle img-fluid mb-3" alt="Politician">
                <h3 class="text-center mb-0">
                    <strong>
                        {{- mandate.politician.firstName }}
                        {{ mandate.politician.lastName -}}
                    </strong>
                </h3>
            </div>
            <div class="w-100 d-lg-none"></div>
            <div class="col-md-6 col-lg-4 order-lg-first mb-4 mb-md-0">
                <div class="card">
                    <div class="card-body">
                        <h2 class="mb-4">{{ 'title.promises'|trans }}</h2>
                        {% if maxCount %}
                            {% for promise in promise_statistics %}
                                <div class="h5{% if not loop.last %} mb-4{% endif %}">
                                    <div>
                                        {% if promise.status is defined %}
                                            {{ promise.count == 1 ? promise.status.name : promise.status.namePlural }}
                                            <sup class="status-color-{{ promise.status.color }}">{{ promise.count }}</sup>
                                        {% else %}
                                            <span class="text-muted">
                                                {{ promise.count == 1 ? 'placeholder.inactive_singular'|trans : 'placeholder.inactive_plural'|trans }}
                                            </span>
                                            <sup class="text-muted">{{ promise.count }}</sup>
                                        {% endif %}
                                    </div>
                                    <div class="progress mt-1">
                                        <div class="progress-bar{%
                                            if promise.status is defined
                                        %} status-bg-{{ promise.status.color }}{%
                                            else
                                        %} bg-secondary{%
                                            endif
                                        %}"
                                             style="width: {{ promise.count * 100 / maxCount }}%;"
                                        ></div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <h2 class="mb-4">{{ 'title.mandate'|trans }}</h2>
                        {% set statistics_color = 'primary' %}
                        <div class="h5 mb-4">
                            <div>
                                {{ 'title.votes'|trans }}
                                <sup class="text-muted">
                                    <span class="text-{{ statistics_color }}">{{ mandate.votesCount }}</span>
                                    &nbsp;<span class="fa fa-male"></span>&nbsp;
                                    <span class="text-{{ statistics_color }}">{{ mandate.votesPercent }}%</span>
                                </sup>
                            </div>
                            <div class="progress mt-1">
                                <div class="progress-bar bg-{{ statistics_color }}"
                                     style="width: {{ mandate.votesPercent }}%;"
                                ></div>
                            </div>
                        </div>
                        <div class="h5 mb-4">
                            <div>
                                {{ 'title.the_duration'|trans }}
                                <sup class="text-muted">
                                    <span class="text-{{ statistics_color }}">{{ mandate.beginDate|date('m.Y') }}</span>
                                    &nbsp;<span class="fa fa-clock"></span>&nbsp;
                                    <span class="text-{{ statistics_color }}">{{ mandate.endDate|date('m.Y') }}</span>
                                </sup>
                            </div>
                            <div class="progress mt-1">
                                <div class="progress-bar bg-{{ statistics_color }}"
                                     style="width: {{ '' ~ macros.get_date_interval_progress(mandate.beginDate, mandate.endDate) }}%;"
                                ></div>
                            </div>
                        </div>
                        <div class="h5">
                            <div>
                                {{ 'title.used_powers'|trans }}
                                <sup class="text-muted">
                                    <span class="text-{{ statistics_color }}">{{ power_statistics.count_used }}</span>
                                    din
                                    <span class="text-{{ statistics_color }}">{{ power_statistics.count_all }}</span>
                                </sup>
                            </div>
                            <div class="progress mt-1">
                                <div class="progress-bar bg-{{ statistics_color }}"
                                     style="width: {{ power_statistics.count_used / power_statistics.count_all * 100 }}%;"
                                ></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
