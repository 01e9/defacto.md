{% extends 'admin/base.html.twig' %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col">
                {% include 'admin/component/breadcrumb.html.twig' with {
                    current: {title: 'title.promises'|trans}
                } only %}
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8">
                {% if orphanActions is not empty %}
                    <h3 class="text-danger">
                        {{ 'title.orphan_actions'|trans }}
                    </h3>
                    {% include 'admin/component/list/actions.html.twig' with {
                        actions: orphanActions
                    } only %}
                    <div class="mb-5"></div>
                {% endif %}

                <h3>
                    {{ 'title.promises'|trans }}
                    <sup>
                        <a href="{{ path('admin_promise_add') }}" class="badge badge-light text-muted"
                        >{{ 'action.add'|trans }}</a>
                    </sup>
                </h3>
                {% include 'admin/component/list/promises.html.twig' with {
                    promises: promises
                } only %}
            </div>
            <div class="col-lg-4">
                <h3>
                    {{ 'title.statuses'|trans }}
                    <sup>
                        <a href="{{ path('admin_status_add') }}" class="badge badge-light text-muted"
                        >{{ 'action.add'|trans }}</a>
                    </sup>
                </h3>
                {% include 'admin/component/list/statuses.html.twig' with {
                    statuses: statuses
                } only %}
            </div>
        </div>
    </div>
{% endblock %}