{% if delimiter is defined %}
    <div class="container">
        <hr class="border-secondary mt-5">
    </div>
{% endif %}
<div class="container text-light my-5">
    <div class="row">
        <div class="col mb-3 text-sm-center">
            <p>deFacto - Platformă online de monitorizare a promisiunilor făcute de politicieni</p>
        </div>
    </div>
    <div class="row justify-content-md-center">
        <div class="col text-sm-center">
            <h5 class="mb-3">Ne găsiți pe</h5>
            <ul class="list-unstyled d-inline-block text-left">
                {% for item in [
                    {
                        name: 'Facebook',
                        link: 'https://facebook.com/defacto.md/',
                        icon: 'fab fa-facebook-square'
                    },
                    {
                        name: 'Instagram',
                        link: 'https://instagram.com/defacto.md/',
                        icon: 'fab fa-instagram'
                    },
                    {
                        name: 'Linkedin',
                        link: 'https://www.linkedin.com/company/defactomd/',
                        icon: 'fab fa-linkedin'
                    },
                ] %}
                <li class="h6">
                    <span class="{{ item.icon }} mr-2"></span>
                    <a href="{{ item.link }}"
                       target="_blank"
                       class="text-primary-light">{{ item.name }}</a>
                </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>