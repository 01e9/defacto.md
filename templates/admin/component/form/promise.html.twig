{% set id = form.vars.value|default({id:0}).id %}

{{ form_start(form) }}

<div class="row">
    <div class="col-4">
        {{ form_row(form.politician) }}
    </div>
    <div class="col-2 d-flex align-items-center">
        <div>
            <label>&nbsp;</label>
            {{ form_row(form.hasPrerogatives, {'label_attr': {'class': 'switch-custom'}}) }}
        </div>
    </div>
    <div class="col-6">
        {{ form_row(form.election) }}
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="row">
            <div class="col">
                {{ form_row(form.name) }}
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{ form_row(form.slug) }}
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="row">
            <div class="col">
                {{ form_row(form.madeTime, {
                    'type': 'text',
                    'attr': {'class': 'datepicker-input', 'readonly': true}
                }) }}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                {{ form_row(form.code) }}
            </div>
            <div class="col-lg-6 d-flex align-items-center">
                <div>
                    <label>&nbsp;</label>
                    {{ form_row(form.published, {'label_attr': {'class': 'switch-custom'}}) }}
                </div>
            </div>
        </div>
    </div>
</div>

{% if id %}
    <div class="row">
        <div class="col pb-3">
            {{ form_row(form.sources) }}
        </div>
    </div>
{% else %}
    {% do form.sources.setRendered() %}
{% endif %}

<div class="row">
    <div class="col">
        {{ form_row(form.description) }}
    </div>
</div>
<div class="row">
    <div class="col-4">
        {{ form_row(form.categories) }}
    </div>
    <div class="col-4">
        {{ form_row(form.status) }}
    </div>
</div>

{% if not id %}
<div class="row">
    <div class="col">
        <p class="text-info">{{ 'text.more_fields_after_add'|trans }}</p>
    </div>
</div>
{% endif %}

{% include "admin/component/form/widget/submit-delete-buttons.html.twig" with {
    submitText: id ? 'action.edit_promise'|trans : 'action.add_promise'|trans,
    delete: id ? {text: 'action.delete_promise'|trans, link: path('admin_promise_delete', {id: id})} : false
} only %}

{{ form_rest(form) }}

{{ form_end(form) }}