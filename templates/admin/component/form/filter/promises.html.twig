{{ form_start(form) }}

<div class="card mb-3 bg-light">
    <div class="card-body">
        <div class="row">
            <div class="col-lg-2">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">{{ form_label(form.code) }}</span>
                    </div>
                    {{ form_widget(form.code) }}
                </div>
            </div>
            <div class="col-lg-4">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">{{ form_label(form.politician) }}</span>
                    </div>
                    {{ form_widget(form.politician) }}
                </div>
            </div>
            <div class="col">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">{{ form_label(form.election) }}</span>
                    </div>
                    {{ form_widget(form.election) }}
                </div>
            </div>
            <div class="col-lg-auto">
                <button type="submit" class="btn btn-secondary">{{ "action.filter"|trans }}</button>
            </div>
        </div>

        {{ form_rest(form) }}
    </div>
</div>

{{ form_end(form) }}