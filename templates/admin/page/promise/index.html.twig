{% extends 'admin/base.html.twig' %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col">
                {% include 'admin/component/breadcrumb.html.twig' with {
                    current: {title: 'title.promises'|trans},
                    add: {link: path('admin_promise_add'), text: 'action.add_promise'|trans}
                } only %}
            </div>
        </div>

        <div class="row">
            <div class="col">
                {% include 'admin/component/form/filter/promises.html.twig' with {form: filterForm} only %}
            </div>
        </div>

        <div class="row">
            <div class="col">
                {% if orphanActions is not empty %}
                    <h3 class="text-danger">
                        {{ 'title.orphan_actions'|trans }}
                    </h3>
                    {% include 'admin/component/list/actions.html.twig' with {
                        actions: orphanActions
                    } only %}
                    <div class="mb-5"></div>
                {% endif %}

                {% include 'admin/component/list/promises.html.twig' with {
                    pagination: pagination
                } only %}
            </div>
        </div>
    </div>
{% endblock %}