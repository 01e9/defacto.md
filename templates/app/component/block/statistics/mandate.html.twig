{% import 'macros.html.twig' as macros %}

{% set maxCount = 0 %}
{% for promise in promise_statistics %}
    {% set maxCount = max(maxCount, promise.count) %}
{% endfor %}


<section class="mandate-statistics pb-5" itemscope itemtype="https://schema.org/WinAction">
    {% include 'app/component/after-header-space.html.twig' %}
    <header class="row">
        <div class="col">
            <h2 class="text-center mb-3" itemprop="name">{{ mandate.institutionTitle.title.theName }}</h2>
        </div>
    </header>
    <meta itemprop="startTime" content="{{ mandate.beginDate|date('Y-m-d') }}">
    <meta itemprop="endTime" content="{{ mandate.endDate|date('Y-m-d') }}">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body" itemprop="participant" itemscope itemtype="https://schema.org/Person">
                    <div class="row">
                        <div class="col-auto pr-0 d-none d-sm-block">
                            <img src="{{ macros.politician_photo_url(mandate.politician) }}"
                                 alt="Politician"
                                 class="rounded-circle img-fluid"
                                 style="max-width: 5rem;"
                                 itemprop="image"
                            >
                        </div>
                        <div class="col">
                            <h3 class="mb-3">
                                <a
                                    href="{{ path("politician", {slug: mandate.politician.slug}) }}"
                                ><span itemprop="name">
                                    {{ mandate.politician.firstName }}
                                    {{ mandate.politician.lastName }}
                                </span></a>
                            </h3>

                            <div class="row">
                                <div class="col-12">
                                    <div class="progress bg-light h-auto">
                                        <div class="progress-bar bg-info text-right px-2 py-1 w-100">
                                            <div class="row font-weight-bold">
                                                <div class="col text-left">
                                                    <span class="fa fa-male mr-1"></span>
                                                    <samp>
                                                        {{ mandate.votesCount|number_format }}
                                                        <span>{{ 'text.votes'|trans }}</span>
                                                    </samp>
                                                </div>
                                                <div class="col text-right">
                                                    <samp>{{ mandate.votesPercent }}%</samp>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 mt-3">
                                    <div class="row small">
                                        <div class="col">
                                            <samp class="text-body">{{ mandate.beginDate|date('d.m.Y') }}</samp>
                                        </div>
                                        <div class="col-auto"><sup class="text-muted">{{ "text.duration"|trans }}</sup></div>
                                        <div class="col text-right">
                                            <samp class="text-body">{{ mandate.endDate|date('d.m.Y') }}</samp>
                                        </div>
                                    </div>
                                    <div class="progress thin bg-light mandate-period mt-1">
                                        <div class="progress-bar bg-info rounded"
                                             style="width: {{ '' ~ macros.get_date_interval_progress(mandate.beginDate, mandate.endDate) }}%;"
                                        >
                                            <span class="fas fa-clock text-info bg-white rounded-circle"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% if maxCount %}
        <div class="row mt-3">
            <div class="col">
                <h3 class="mb-3 text-center">
                    <a
                        itemprop="url"
                        href="{{ path("promises", {
                            'politicianSlug': mandate.politician.slug,
                            'electionSlug': mandate.election.slug
                        }) }}"
                    ><span itemprop="instrument">{{ 'title.promises'|trans }}</span></a>
                </h3>
                {% for promise in promise_statistics %}
                    <div class="{% if not loop.last %}mb-3{% endif %}">
                        <div>
                            {% if promise.status is defined %}
                                {% set statusName = promise.count == 1
                                    ? promise.status.name
                                    : promise.status.namePlural %}
                                {% set statusDescription = promise.status.description %}
                                {% set bgColorClass = "status-bg-" ~ promise.status.color ~ "-dark" %}
                                {% set colorClass = "status-color-" ~ promise.status.color %}
                            {% else %}
                                {% set statusName = promise.count == 1
                                    ? 'placeholder.inactive_singular'|trans
                                    : 'placeholder.inactive_plural'|trans %}
                                {% set statusDescription = "" %}
                                {% set bgColorClass = "bg-secondary" %}
                                {% set colorClass = "text-secondary" %}
                            {% endif %}
                            {% set spacingClasses = "py-1 px-2" %}
                            {% set width = promise.count * 100 / maxCount %}

                            <a
                                href="{{ path('promises', {
                                    'statusSlug': promise.status is defined ? promise.status.slug : '~',
                                    'politicianSlug': mandate.politician.slug,
                                    'electionSlug': mandate.election.slug
                                }) }}"
                                class="container-fluid status-statistics bg-light rounded"
                                title="{{ statusDescription }}"
                            >
                                    <span class="row">
                                        <samp class="col-auto count text-body">
                                            {% if promise.count < 10 %}&nbsp;{% endif %}{{ promise.count }}
                                        </samp>
                                        <b class="col percentage">
                                            <span class="{{ spacingClasses }} {{ colorClass }}">
                                                {{ statusName }}
                                            </span>
                                            <span class="{{ spacingClasses }} {{ bgColorClass }} text-white rounded" style="width: {{ width }}%;">
                                                {{ statusName }}
                                            </span>
                                        </b>
                                    </span>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
</section>

