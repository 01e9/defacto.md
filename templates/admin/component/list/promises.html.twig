<div class="list-group list-group-flush">
    {% for promise in promises %}
        <a class="list-group-item list-group-item-action" href="{{ path('admin_promise_edit', {id: promise.id}) }}">
            <h5 {% if not promise.published %}class="text-muted font-italic"{% endif %}>
                {{ promise.title }}
            </h5>
            <p class="mb-1">
                {{ promise.mandate.politician.firstName }} {{ promise.mandate.politician.lastName }}
                <sup>{{ promise.madeTime|date }}</sup>
                <span>{{ promise.status.name|default('placeholder.no_status'|trans) }}</span>
            </p>
            <small>
                {% for category in promise.categories %}
                    {{ category.name }}
                    {% if not loop.last %}&middot;{% endif %}
                {% endfor %}
            </small>
        </a>
    {% endfor %}
</div>