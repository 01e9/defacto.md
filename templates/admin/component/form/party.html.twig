{# @var \Symfony\Component\Form\FormInterface form #}
{# @var \App\Entity\Party party Optional #}

{% set id = form.vars.value|default({id:0}).id %}

{{ form_start(form) }}

<div class="row mb-4">
    <div class="col-lg-2">
        {% include 'admin/component/form/field/photo.html.twig' with {
            field: form.logoUpload,
            imagePath: (party is defined and party.logo)
                ? (constant('App\\Consts::UPLOADS_DIR_PARTY') ~ party.logo)
                : null,
            changeText: 'action.change_logo'|trans
        } only %}
    </div>
    <div class="col-lg-10">
        <div class="row">
            <div class="col-lg-6">
                {{ form_row(form.name) }}
            </div>
            <div class="col-lg-6">
                {{ form_row(form.slug) }}
            </div>
        </div>
    </div>
</div>

{% include "admin/component/form/widget/submit-delete-buttons.html.twig" with {
    submitText: id ? 'action.edit_party'|trans : 'action.add_party'|trans,
    delete: id ? {text: 'action.delete_party'|trans, link: path('admin_party_delete', {id: id})} : false
} only %}

{{ form_rest(form) }}

{{ form_end(form) }}