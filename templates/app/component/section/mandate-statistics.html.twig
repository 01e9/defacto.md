{% import 'macros.html.twig' as macros %}

{% set maxCount = 0 %}
{% for promise in promise_statistics %}
    {% set maxCount = max(maxCount, promise.count) %}
{% endfor %}

<div class="mandate-statistics bg-light-pattern pb-5">
    {% include 'app/component/after-header-space.html.twig' %}
    <div>
        <div class="row no-gutters">
            <div class="col text-center pb-3">
                <h1 class="mb-3 mb-lg-5">{{ mandate.institutionTitle.title.name }}</h1>
            </div>
        </div>
        <div class="row no-gutters align-items-lg-stretch">
            <div class="photo-col col-lg-4 mb-4 mb-lg-0">
                <img src="{{ macros.politician_photo_url(mandate.politician) }}"
                     class="rounded-circle img-fluid mb-3 mb-lg-5" alt="Politician">
                <h3 class="text-center mb-0">
                    <strong>
                        {{- mandate.politician.firstName }}
                        {{ mandate.politician.lastName -}}
                    </strong>
                </h3>
            </div>
            <div class="w-100 d-lg-none"></div>
            <div class="col-md-6 col-lg-4 order-lg-first mb-4 mb-md-0">
                <div class="card h-100 text-lg-right">
                    <div class="card-body">
                        <h2 class="mb-4">{{ 'title.promises'|trans }}</h2>
                        {% if maxCount %}
                            {% for promise in promise_statistics %}
                                <div class="h5{% if not loop.last %} mb-4{% endif %}">
                                    <div>
                                        {% if promise.status is defined %}
                                            <a href="{{ path('status', {'slug': promise.status.slug}) }}">
                                                {{- promise.count == 1 ? promise.status.name : promise.status.namePlural -}}
                                            </a>
                                            <sub class="status-color-{{ promise.status.color }}"><samp>{{ promise.count }}</samp></sub>
                                        {% else %}
                                            <span class="text-muted">
                                                <a href="{{ path('status', {'slug': '~'}) }}">
                                                    {{- promise.count == 1 ? 'placeholder.inactive_singular'|trans : 'placeholder.inactive_plural'|trans -}}
                                                </a>
                                            </span>
                                            <sup class="text-muted"><samp>{{ promise.count }}</samp></sup>
                                        {% endif %}
                                    </div>
                                    <div class="progress mt-1 justify-content-lg-end bg-light">
                                        <div class="progress-bar{%
                                            if promise.status is defined
                                        %} status-bg-{{ promise.status.color }}{%
                                            else
                                        %} bg-secondary{%
                                            endif
                                        %}"
                                             style="width: {{ promise.count * 100 / maxCount }}%;"
                                        ></div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h2 class="mb-4">{{ 'title.mandate'|trans }}</h2>
                        {% set statistics_color = 'primary' %}
                        <div class="h5 mb-4">
                            <div>
                                {{ 'title.votes'|trans }}
                                <sub class="text-muted">
                                    <samp class="text-{{ statistics_color }}">{{ mandate.votesCount }}</samp>
                                    &nbsp;<span class="fa fa-male"></span>&nbsp;
                                    <samp class="text-{{ statistics_color }}">{{ mandate.votesPercent }}%</samp>
                                </sub>
                            </div>
                            <div class="progress mt-1 bg-light">
                                <div class="progress-bar bg-{{ statistics_color }}"
                                     style="width: {{ mandate.votesPercent }}%;"
                                ></div>
                            </div>
                        </div>
                        <div class="h5 mb-4">
                            <div>
                                {{ 'title.the_duration'|trans }}
                                <sub class="text-muted">
                                    <samp class="text-{{ statistics_color }}">{{ mandate.beginDate|date('m.Y') }}</samp>
                                    &nbsp;<span class="fa fa-clock"></span>&nbsp;
                                    <samp class="text-{{ statistics_color }}">{{ mandate.endDate|date('m.Y') }}</samp>
                                </sub>
                            </div>
                            <div class="progress mt-1 bg-light">
                                <div class="progress-bar bg-{{ statistics_color }}"
                                     style="width: {{ '' ~ macros.get_date_interval_progress(mandate.beginDate, mandate.endDate) }}%;"
                                ></div>
                            </div>
                        </div>
                        <div class="h5">
                            <div>
                                {{ 'title.used_powers'|trans }}
                                <sub class="text-muted">
                                    <samp class="text-{{ statistics_color }}">{{ power_statistics.count_used }}</samp>
                                    din
                                    <samp class="text-{{ statistics_color }}">{{ power_statistics.count_all }}</samp>
                                </sub>
                            </div>
                            <div class="progress mt-1 bg-light">
                                <div class="progress-bar bg-{{ statistics_color }}"
                                     style="width: {{ power_statistics.count_used / power_statistics.count_all * 100 }}%;"
                                ></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
