{# @var \App\Entity\Methodology methodology #}

{% extends 'app/base.html.twig' %}

{% block html_class %}bg-dark-pattern{% endblock %}
{% block body_class %}bg-transparent{% endblock %}

{% block title %}{{ methodology.title }}{% endblock %}

{% block head_meta %}
    {{ parent() }}
    <link rel="canonical" href="{{ url('methodology', {'slug': methodology.slug}) }}" />
{% endblock %}

{% block main %}
    <main class="bg-light-pattern pt-4 pb-5">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="row">
                        <div class="col px-1">
                            <article
                                class="card mb-3"
                                itemscope
                                itemtype="https://schema.org/Guide"
                            >
                                <div class="card-body px-lg-5 pb-lg-5 pt-lg-5">
                                    <h1
                                        class="mb-4 text-center"
                                        itemprop="headline"
                                    >{{ methodology.title }}</h1>
                                    <div
                                        class="raw-html"
                                        itemprop="text"
                                    >{{ methodology.content|raw }}</div>
                                </div>
                            </article>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    {% include 'app/component/section/footer.html.twig' with {} only %}
{% endblock %}
